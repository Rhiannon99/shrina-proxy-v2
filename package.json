{
  "name": "shrina-proxy-v2",
  "version": "1.0.0",
  "description": "Lightweight M3U8/HLS proxy with domain-specific anti-hotlinking support",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "docker:build": "docker build -t m3u8-proxy .",
    "docker:run": "docker run -p 3000:3000 --env-file .env m3u8-proxy"
  },
  "keywords": [
    "m3u8",
    "hls",
    "proxy",
    "cors",
    "streaming"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.8.2",
    "@mongodb-js/zstd": "^2.0.1",
    "dotenv": "^16.4.0",
    "hono": "^4.3.0",
    "node-fetch": "^3.3.2",
    "pino": "^8.20.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.0",
    "tsx": "^4.19.3",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
